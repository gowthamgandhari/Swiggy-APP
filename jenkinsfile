pipeline {
    agent any

    tools {
        jdk 'jdk21'
        nodejs 'nodejs23'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        AWS_DEFAULT_REGION = 'ap-south-1'
        action = "apply"  // change to 'destroy' when needed
    }

    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/gowthamgandhari/Swiggy-APP.git'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh '''
                        $SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectKey=Swiggy \
                        -Dsonar.projectName=Swiggy 
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {  
                sh 'npm ci' 
            }
        }

        stage('Terraform EC2 Init/fmt/validate & Apply') {
            steps {
                withAWS(credentials: 'aws-creds', region: 'ap-south-1') {
                    dir('Tf-Scrpt-Ec2-Eks-Swiggy-App/terraform-EC2-code') {
                        sh '''
                            terraform init
                            terraform fmt
                            terraform validate
                            terraform apply -auto-approve
                        '''
                    }
                }
            }
        }

        stage('Terraform EKS Init/fmt/validate & Apply') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                withAWS(credentials: 'aws-creds', region: 'ap-south-1') {
                    dir('Tf-Scrpt-Ec2-Eks-Swiggy-App/terraform-EKS-Code') {
                        sh '''
                            terraform init
                            terraform fmt
                            terraform validate
                            terraform apply -auto-approve
                        '''
                    }
                }
            }
        }

        stage('Manual Approval') {
            steps {
                input(message: 'Approve deployment?', ok: 'Proceed')
            }
        }
        
        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs . > trivyfs.txt'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'dockerhub-creds') {
                        sh '''
                            docker build -t swiggy .
                            docker tag swiggy gowthamcloud268/swiggy:latest
                            docker push gowthamcloud268/swiggy:latest
                        '''
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh 'trivy image gowthamcloud268/swiggy:latest > trivy.txt'
            }
        }

        stage('Deploy to EKS') {
            steps {
                dir('Tf-Scrpt-Ec2-Eks-Swiggy-App/terraform-EKS-Code') {
                    withAWS(credentials: 'aws-creds', region: 'ap-south-1') {
                        sh '''
                            echo "Waiting for EKS cluster to become active..."
                            aws eks wait cluster-active --name Swiggy-cluster3
                            aws eks update-kubeconfig --region ap-south-1 --name Swiggy-cluster3
                            kubectl apply -f deployment.yml
                            kubectl apply -f service.yml
                        '''
                    }
                }
            }
        }
    }
}
